<!--电影列表页面 整个栏目 一列一列  -->
<import src="../movies/movies.wxml" />

<template name="moviesList">
    <view class='contains'>
        <!--列表开头  -->
        <view class="movie-head">
          <text class="slogan">正在热映</text>
          <view class="more">
            <text class="more-text">更多</text>
            <image class="more-img" src="/images/icon/arrow-right.png"></image>
          </view>
        </view>
        <!--列表内容  -->
        <view class='contsm'>
            <template is="movies"></template>
            <template is="movies"></template>
            <template is="movies"></template>
        </view>

    </view>
</template>
