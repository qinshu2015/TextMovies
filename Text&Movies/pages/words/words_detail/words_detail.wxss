/* pages/words_detail/words_detail.wxss */

.contain{
  width: 100%;
}
.titleimg{
  width: 100%; 
  height: 480rpx
}
/*详情  */
.detaillist{
  padding: 30rpx;
}
.listtit{
    display: flex;
    flex-direction: row;
}
.listtit image{
  width: 120rpx;
  height: 120rpx;
  border-radius:50%; 
}
.listtit text{
  margin-left: 20rpx;
  line-height: 120rpx;
  color: #999
}
.listtit text:nth-of-type(1){
  font-size: 32rpx
}
.listtit text:nth-of-type(3){
  font-size: 28rpx
}
.titext{
  font-size: 26rpx;
  font-weight: bold;
}
/*分享  */
.share{
  height:70rpx;
  width: 90%;
  position: relative;
  border-bottom: 1px solid #e5e5e5;
}
.share image{
  position: absolute;
  width: 80rpx;
  height: 80rpx;
  border-radius:50%; 
  top: 35rpx;
  right: 0rpx
}
.share image:nth-of-type(1){
  right:120rpx
}
.wordcont{
  color: #666;
}